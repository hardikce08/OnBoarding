@model CU.OnBoarding.DataAccess.Model.User
@{
    ViewBag.Title = "Login";
}
@{
    Layout = null;
}

<!doctype html>
<html class="fixed">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">
    @*<meta name="keywords" content="HTML5 Admin Template" />
        <meta name="description" content="Porto Admin - Responsive HTML5 Template">
        <meta name="author" content="okler.net">*@

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="~/Theme/Css/Googlefonts.css" rel="stylesheet" />

    <!-- Vendor CSS -->
    <link href="~/Theme/Css/bootstrap.css" rel="stylesheet" />
    <link href="~/Theme/Css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Theme/Css/magnific-popup.css" rel="stylesheet" />

    <!-- Theme CSS -->
    <link href="~/Theme/Css/theme.css" rel="stylesheet" />

    <!-- Skin CSS -->
    <link href="~/Theme/Css/default.css" rel="stylesheet" />

    <!-- Theme Custom CSS -->
    <link href="~/Theme/Css/theme-custom.css" rel="stylesheet" />

    <!-- Head Libs -->
    <script src="~/Theme/Scripts/modernizr.js"></script>

</head>
<body>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- start: page -->
        <section class="body-sign">
            <div class="center-sign">
                <a href="/" class="logo pull-left">
                    <img src="~/Theme/Images/curise-logo.png" height="54" alt="CURise" />
                </a>

                <div class="panel panel-sign">
                    <div class="panel-title-sign mt-xl text-right">
                        <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>Sign In</h2>
                    </div>
                    <div class="panel-body">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-warning">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <strong>@TempData["Error"]</strong>
                            </div>
                        }
                        <div class="form-group mb-lg">
                            <label>Username</label>
                            <div class="input-group input-group-icon">
                                @Html.TextBoxFor(s => s.EmailAddress, new { @placeholder = "Username", @class = "form-control input-lg", required = "" })
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group mb-lg">
                            <div class="clearfix">
                                <label class="pull-left">Password</label>
                                @*<a href="pages-recover-password.html" class="pull-right">Lost Password?</a>*@
                            </div>
                            <div class="input-group input-group-icon">
                                @Html.TextBoxFor(s => s.Password, new { @placeholder = "Password", @type = "Password", @class = "form-control input-lg", required = "" })
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">
                                <div class="">
                                    @Html.CheckBoxFor(m => m.RememberSignIn)
                                    <label>Remember Me</label>
                                </div>
                            </div>
                            <div class="col-sm-4 text-right">
                                <button type="submit" class="btn btn-primary hidden-xs">Sign In</button>
                                <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Sign In</button>
                            </div>
                        </div>
                    </div>
                </div>
                @Html.HiddenFor(s => s.ReturnUrl)
                <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2020. All rights reserved.</p>
            </div>
        </section>
    }
    <!-- end: page -->
    <!-- Vendor -->
    <script src="~/Theme/Scripts/jquery.js"></script>
    <script src="~/Theme/Scripts/jquery.browser.mobile.js"></script>
    <script src="~/Theme/Scripts/bootstrap.min.js"></script>
    <script src="~/Theme/Scripts/nanoscroller.js"></script>
    @*<script src="
        assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>*@
    <script src="~/Theme/Scripts/magnific-popup.js"></script>
    <script src="~/Theme/Scripts/jquery.placeholder.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/Theme/Scripts/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/Theme/Scripts/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/Theme/Scripts/theme.init.js"></script>

</body>
</html>

